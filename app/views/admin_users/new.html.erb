<%= render partial: "layouts/content_title.erb", locals: {title: "New Admin User"} %>

<%= form_for @admin_user, :builder => OsraFormBuilder,
             html: {class: "records_form", role: "form"} do |f| %>
  <fieldset>
    <%= render 'shared/errors', object: f.object %>
    <div class="form-group">
      <%= f.label_for_field :email %>
      <%= f.text_field :email, :required => true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label_for_field :password %>
      <%= f.password_field :password, :required => true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label_for_field :password_confirmation, class: "required_field" %>
      <%= f.password_field :password_confirmation, :required => true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Create Admin User", class: "btn btn-primary" %>
      <%= link_to 'Cancel', admin_users_path, class: "btn btn-cancel" %>
    </div>
  </fieldset>
<% end %>
