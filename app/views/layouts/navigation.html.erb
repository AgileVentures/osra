<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-1 no-horiz-padding">
      <ul class="nav nav-pills nav-stacked">
        <% HqController::NAVIGATION_BUTTONS.each do | _, btn | %>
          <li role="presentation" <%= (request.path=~ btn[:path_regex]) ? 'class=active' : 'class=dormant' %>>
            <%= link_to %Q{
              <span class="glyphicon #{btn[:glyph]}" aria-hidden="true"></span>
              <p class="text-center">#{btn[:text]}</p>
              }.html_safe, eval(btn[:href]) %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-xs-12 col-sm-11 no-horiz-padding">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= render 'layouts/flashes' %>
        </div>
        <%= yield %>
        <div class="panel-footer">
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <%= render 'layouts/footer' %>
    </div>
  </div>
</div>
