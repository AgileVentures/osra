      <dt>Sponsored Minor Siblings Ct.</dt>
      <dd><%= @orphan.sponsored_minor_siblings_count %></dd>
    </dl>
    <dl class="dl-horizontal">
      <dt>Comments</dt>
      <dd><%= @orphan.comments %></dd>
    </dl>
  </div>
</div>


