<div class="action_items">
  <div class="class">
    <%= link_to('New User', new_hq_user_path,
                class: 'btn btn-default', role: 'button') %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>
        User Name
      </th>
      <th>
        Email
      </th>
      <th>
        Assigned Active Sponsors
      </th>
    </tr>
  </thead>
  <tbody>
    <%- @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user.user_name, hq_user_path(user) %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= user.active_sponsors.count %>
        </td>
      </tr>
    <%- end %>
  </tbody>
</table>
