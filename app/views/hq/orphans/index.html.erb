<%- if params[:sponsor_id] %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Sponsor
        </h3>
      </div>
      <div class="panel-body">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @sponsor.name %></dd>
        </dl>
        <dl class="dl-horizontal">
          <dt>Request Fulfilled</dt>
          <dd><%= @sponsor.request_fulfilled ? 'Yes' : 'No'%>
            (<%= @sponsor.active_sponsorship_count %>/<%= @sponsor.requested_orphan_count %>)
          </dd>
        </dl>
        <dl class="dl-horizontal">
          <%= link_to 'Return to Sponsor Page', hq_sponsor_path(params[:sponsor_id]) %>
        </dl>
      </div>
    </div>
<%- end %>
<div class="action_items">
  <div class="instance">
    <%- if params[:sponsor_id] %>
        <%= link_to 'All (' + @orphans_all.to_s + ')', hq_new_sponsorship_path(scope: :all),
                    class: 'btn btn-default', role: 'button' %>
        <%= link_to 'Eligible For Sponsorship (' + @orphans_sort_by_eligibility.to_s + ')',
                    hq_new_sponsorship_path(scope: :eligible_for_sponsorship),
                    class: 'btn btn-default', role: 'button' %>
    <% else %>
        <%= link_to 'All (' + @orphans_all.to_s + ')', hq_orphans_path(scope: :all),
                    class: 'btn btn-default', role: 'button' %>
        <%= link_to 'Eligible For Sponsorship (' + @orphans_sort_by_eligibility.to_s + ')',
                    hq_orphans_path(scope: :eligible_for_sponsorship),
                    class: 'btn btn-default', role: 'button' %>
    <%- end %>
  </div>
</div>

<%- if @orphans.empty? %>
  <div class="panel-body">
    <em>No Orphans found</em>
  </div>
<%- else %>
  <div class='panel-body table-responsive'>
    <table class='table'>
      <thead>
        <tr>
          <th>
            Osra Num
          </th>
          <th>
            Name
          </th>
          <th>
            Father Name
          </th>
          <th>
            Date of Birth
          </th>
          <th>
            Gender
          </th>
          <th>
            Original Province
          </th>
          <th>
            Partner
          </th>
          <th>
            Father is Martyr
          </th>
          <th>
            Father Deceased
          </th>
          <th>
            Mother Alive
          </th>
          <th>
            Priority
          </th>
          <th>
            Orphan Status
          </th>
          <th>
            Sponsorship
          </th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%- @orphans.each do |orphan| %>
          <tr id="orphan_<%= orphan.id %>">
            <td>
              <%= link_to orphan.osra_num, hq_orphan_path(orphan) %>
            </td>
            <td>
              <%= link_to orphan.name, hq_orphan_path(orphan) %>
            </td>
            <td>
              <%= orphan.father_given_name %>
            </td>
            <td>
              <%= orphan.date_of_birth %>
            </td>
            <td>
              <%= orphan.gender %>
            </td>
            <td>
              <%= orphan.original_address.province.name %>
            </td>
            <td>
              <%= orphan.orphan_list.partner.name %>
            </td>
            <td>
              <%= orphan.father_is_martyr ? 'Yes' : 'No' %>
            </td>
            <td>
              <%= orphan.father_deceased ? 'Yes' : 'No' %>
            </td>
            <td>
              <%= orphan.mother_alive ? 'Yes' : 'No' %>
            </td>
            <td>
              <%= orphan.priority %>
            </td>
            <td>
              <%= orphan.status.humanize %>
            </td>
            <td>
              <%= orphan.sponsorship_status.humanize %>
            </td>
            <td>
              <%- if params[:sponsor_id] and params[:scope] == 'eligible_for_sponsorship' %>
                  <form action=<%= "/hq/sponsors/#{@sponsor.id}/sponsorships" %> method="post">
                    <input name="_method" type="hidden" value="post">
                    <input name="utf8" type="hidden" value="&#x2713;" />
                    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
                    <div class="form-group">
                      <label for="title">Beginning</label>
                      <input name="sponsorship_start_date" type="text" value="<%= Date.current.to_s %>" class="form-control date-picker">
                      <input name="orphan_id" type="hidden" value="<%= orphan.id %>" />
                      <input type="submit" value="Sponsor this orphan" class="btn btn-primary" />
                    </div>
                  </form>
              <%- end %>
            </td>
          </tr>
        <%- end %>
      </tbody>
    </table>
  </div>
  <div class="pagination">
    <%= will_paginate @orphans, renderer: BootstrapPagination::Rails %>
  </div>
<%- end %>
