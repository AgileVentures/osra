<%= form_for [:hq, @partner_facade.partner] do |f| %>
  <%= render 'shared/errors', object: f.object %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :region %>
    <%= f.text_field :region, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :contact_details %>
    <%= f.text_field :contact_details, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :province_id %>
    <%= f.collection_select :province_id,
     @partner_facade.provinces, :id, :name , {},  class: "form-control", disabled: !f.object.new_record?%>
  </div>
  <div class="form-group">
    <%= f.label :status_id %>
    <%= f.collection_select :status_id,
      @partner_facade.statuses, :id, :name, {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :start_date %>
    <%= f.text_field :start_date, class: "form-control date-picker" %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to('Cancel',
                (@partner_facade.partner.id ? hq_partner_path(@partner_facade.partner) : hq_partners_path),
                class: 'btn btn-default btn-cancel', role: 'button') %>
  </div>
<% end %>

