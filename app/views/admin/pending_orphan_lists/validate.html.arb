div do
  if list_valid
    h3 'Orphan list is valid'
    h4 'The following are the orphans included in the uploaded file:'
    table_for result do
      column :name
      column :father_name
      column :date_of_birth
      column :gender
    end
  else
    h3 'Orphan list is invalid'
    h4 'The following errors were encountered while processing the uploaded file:'
    table_for result do
      column 'Location', :ref
      column 'Error details', :error
    end
  end
end

div do
  active_admin_form_for orphan_list,
                        url: import_admin_partner_pending_orphan_lists_path(partner) do |f|
    f.inputs do
      f.hidden_field :pending_id, value: pending_orphan_list.id
    end

    f.actions do
      f.action :submit, label: 'Import' if list_valid
      f.cancel_link admin_partner_pending_orphan_list_path(partner, pending_orphan_list), method: :delete if list_valid
      f.cancel_link admin_partner_path(partner) unless list_valid

    end
  end
end