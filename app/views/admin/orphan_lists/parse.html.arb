div do
  if list_valid
    h3 "Orphan list is valid"
    table_for result do
      column :name
      column :father_name
    end
  else
    h3 "Orphan list is invalid"
    table_for result do
      column :ref
      column :error
    end
  end
end

div do
  active_admin_form_for orphan_list,
                        url: import_admin_partner_orphan_lists_path(partner) do |f|
    f.inputs do
      f.hidden_field :pending_id, value: pending_orphan_list.id
    end
    if list_valid
      f.actions
    else
      f.actions do
        f.action :cancel
      end
    end
  end
end